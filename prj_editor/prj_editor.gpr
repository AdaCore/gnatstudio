with "../common/common";
with "../gtkada/gtkada";
with "../kernel/kernel";
with "../gvd/gvd_common";
with "../widgets/widgets";
with "../vsearch/vsearch";

project Prj_Editor is

   for Languages use ("C", "Ada");
   for Source_Dirs use ("src", "pixmaps", "testsuite");
   for Object_Dir use "obj";

   package Builder is
      for Default_Switches ("Ada") use ("-g");
   end Builder;

   package Compiler is
      for Default_Switches ("Ada") use ("-g", "-gnata", "-O2", "-gnaty", "-gnatwue");
      for Switches ("naming_scheme_editor_pkg.adb") use ("-g", "-O2");
      for Switches ("new_variable_editor_pkg.adb") use ("-g", "-O2");
      for Switches ("switches_editor_pkg.adb") use ("-g", "-O2");
      for Switches ("wizard_window_pkg.adb") use ("-g", "-O2");
      for Switches ("foreign_naming_scheme_editor_pkg.adb") use ("-g", "-O2");
   end Compiler;

end Prj_Editor;
