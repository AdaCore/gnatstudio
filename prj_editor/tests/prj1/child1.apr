with "child2.apr";
project Child1 is
  OS := External ("OS_TYPE", "Foo");  --  Fail if no default value
  Source_Files := ("child1_src.adb", "child11_src.adb",
                   "child11_src.ads");
  Source_Dirs := ("foo", "foo/bar");
  Object_Dir := "ob" & "j";   --  Concatenation

  package Gnatmake is

     case OS is
        when "Unix" => Switches := "-g";
        when others => Switches := "-gnaty";
     end case;

     package Compiler is
        Switches := ("-O1", "-gnatwu");
        Switches ("child1_src.adb") := ("-O2", "-g");
        Switches ("child11_src.ads") := "-O2";
     end Compiler;

     package Binder is
        Switches := "-E";
     end Binder;

     package Linker is
        Switches := "-s";
     end Linker;
  end Gnatmake;
end Child1;
