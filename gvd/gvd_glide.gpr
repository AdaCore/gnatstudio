with "gvd";
with "../kernel/kernel";
with "../shared";

project GVD_Glide is

   for Source_Dirs use ("glide");
   for Object_Dir use "obj";

   package Compiler is
      for Default_Switches ("Ada") use
        ("-gnata", "-g", "-O2", "-gnaty", "-gnatwue");
   end Compiler;

   package IDE renames Shared.IDE;

end GVD_Glide;
