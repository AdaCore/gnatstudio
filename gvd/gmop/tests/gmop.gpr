with "libgmop";

project Gmop is

   for Source_Dirs use ("gmop");
   for Object_Dir use "obj";
   for Main use ("mi_check.adb", "mi_dump.adb");

   package Compiler is
      for Default_Switches ("ada") use ("-gnat05", "-gnatwae", "-gnata",
                                        "-gnatyg");
   end Compiler;

   package Builder is
      for Default_Switches ("ada") use ("-g", "-s");
   end Builder;

end Gmop;

