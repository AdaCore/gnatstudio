with "gtkada";
with "../shared";
with "../kernel/kernel";
with "../browsers/browsers";

project GVD is

   for Languages use ("Ada");
   for Source_Dirs use ("src");
   for Object_Dir use Shared'Object_Dir;

   package Builder is
      for Switches ("Ada") use ("-m");
   end Builder;

   package Compiler renames Shared.Compiler;

   package Binder is
      for Switches ("Ada") use ("-E");
   end Binder;

end GVD;
