with "../gtkada/gtkada";
with "../kernel/kernel";
with "../widgets/widgets";
with "../shared";

project VCS is

   for Languages use ("C", "Ada");
   for Source_Dirs use ("src", "pixmaps", "tests");
   for Object_Dir use "obj";

   package Compiler is
      for Default_Switches ("Ada") use
        ("-g", "-O2", "-gnaty", "-gnatwue", "-fPIC");
   end Compiler;

   package IDE renames Shared.IDE;

end VCS;
