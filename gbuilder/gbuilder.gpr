with "../gtkada/gtkada";

project GBuilder is

   for Languages use ("C", "Ada");
   for Source_Dirs use ("src", "pixmaps");
   for Object_Dir use "obj";

   package Compiler is
      for Default_Switches ("Ada") use ("-g", "-O2", "-gnata", "-gnaty", "-gnatwue");
      for Switches ("gui_builder_pkg.adb") use ("-g", "-O2");
   end Compiler;

end GBuilder;
