with "../gtkada/gtkada";
with "../shared";

project GBuilder is

   for Languages use ("C", "Ada");
   for Source_Dirs use ("src", "pixmaps");
   for Object_Dir use "obj";

   package Compiler is
      for Default_Switches ("Ada") use Shared.Compiler.Default_Switches ("Ada");
      for Switches ("gui_builder_pkg.adb") use ("-g", "-O2");
   end Compiler;

   package IDE renames Shared.IDE;

end GBuilder;
