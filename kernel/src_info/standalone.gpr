project Standalone is
   for Source_Dirs use
     ("common", "gtkada", "gvd", "gnat", ".", "tests");
   for Object_Dir use "standalone_obj";

   package Compiler is
      for Switches ("sdefault.adb") use ("-g");
      for Default_Switches ("ada") use ("-gnatwue", "-gnatg", "-g");
   end Compiler;

   package Linker is
      for Default_Switches ("Ada") use ("-lgccprefix");
   end Linker;

end Standalone;
