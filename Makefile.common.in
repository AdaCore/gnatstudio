CC         = @CC@
LANGUAGES  = c ada
AR_EXT     = .a
C_EXT      = .c
GTK_PREFIX = @GTK_PREFIX@
ATK_PREFIX = @ATK_PREFIX@
PANGO_PREFIX = @PANGO_PREFIX@
GLIB_PREFIX  = @GLIB_PREFIX@
CAIRO_PREFIX = @CAIRO_PREFIX@
PREFIX       = @prefix@
GTKADA_PREFIX= @GTKADA_PREFIX@

ifeq (${OS},Windows_NT)
PATH_SEPARATOR=;
else
PATH_SEPARATOR=:
endif

# Add path to gtkada.gpr (as found from gtkada-config by configure)
# Put it last to allow the user to point to another one
#export ADA_PROJECT_PATH:=${ADA_PROJECT_PATH}:${GTKADA_PREFIX}/lib/gnat
export ADA_PROJECT_PATH:=${GTKADA_PREFIX}/lib/gnat${PATH_SEPARATOR}${ADA_PROJECT_PATH}

# How to build gnatlib:
export LIBRARY_TYPE=static

export TP_TASKING=No_Tasking

