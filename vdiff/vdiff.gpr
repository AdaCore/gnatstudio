with "../gtkada/gtkada";
with "../common/common";
with "../kernel/kernel";
with "../shared";

project VDiff is

   for Source_Dirs use ("src");
   for Object_Dir use "obj";

   package Compiler is
      for Default_Switches ("Ada") use Shared.Compiler'Default_Switches ("Ada");
      for Switches ("vdiff_pkg.adb") use ("-g", "-O2", "-gnat05");
   end Compiler;

   package IDE renames Shared.IDE;

end VDiff;
