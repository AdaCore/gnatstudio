<?xml version="1.0" ?>
<!--
  This file adds a new Build->Compile current with -gnatR menu.

  Selecting an open source editor, and then clicking on this menu, will
  output the layout of all the records in the current file, by recompiling
  the file with -gnatR.
-->

<gnatr>
   <action name="compile current file with -gnatR" output="gnatR" category="Builder" >
      <external >gnatmake -f -gnatc -P%P -gnatR -u %F</external>
      <filter id="Source editor" />
   </action>

   <Submenu>
      <Title>Build</Title>
      <menu action="compile current file with -gnatR">
         <Title>Compile current with -gnatR</Title>
      </menu>
   </Submenu>

</gnatr>
