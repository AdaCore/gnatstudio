<?xml version="1.0" ?>
<GPS>
   <action name="generate_ali" output="none" category="Build" >
     <description>Generate Ada cross reference information</description>
     <shell>MDI.save_all</shell>
     <shell>Locations.remove_category "Builder results"</shell>
     <shell>MDI.get "Messages"</shell>
     <shell>MDIWindow.raise_window %1</shell>
     <shell>Project.scenario_variables_cmd_line -X</shell>
     <shell>Project.root</shell>
     <shell>Project.get_attribute_as_string %1 "gnat" "ide"</shell>
     <external output=""
      server="build_server"
      progress-regexp="completed (\d+) out of (\d+).*">%1 make -c -d -gnatQ -k %PPs %3</external>
     <on-failure>
       <shell>Locations.parse """%1 """ "Builder results"</shell>
       <shell>Codefix.parse "Ada xref computation" """%2 """</shell>
     </on-failure>
   </action>

   <submenu>
     <title>Build</title>
     <menu action="generate_ali" >
        <title>Recompute _Ada xrefs</title>
     </menu>
   </submenu>
</GPS>
