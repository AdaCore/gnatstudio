<?xml version="1.0"?>

<GPS>

  <!-- SSH -->

  <remote_connection_config name="ssh">
    <start_command>ssh</start_command>
    <start_command_common_args>-t -t -C %h</start_command_common_args>
    <start_command_user_args>-l %u</start_command_user_args>
    <user_prompt_ptrn>^[^\n]*(ogin|[Nn]ame)[^\n]*: *$</user_prompt_ptrn>
    <password_prompt_ptrn>^[^\n]*([Pp]assword|[Pp]assphrase.*): *$</password_prompt_ptrn>
    <extra_ptrn auto_answer="true" answer="yes">^.*continue connecting \(yes/no\)\? *</extra_ptrn>
  </remote_connection_config>

  <!-- RSH -->

  <remote_connection_config name="rsh">
    <start_command>rsh</start_command>
    <start_command_common_args>%h</start_command_common_args>
    <start_command_user_args>-l %u</start_command_user_args>
    <user_prompt_ptrn>^[^\n]*(ogin|[Nn]ame)[^\n]*: *$</user_prompt_ptrn>
    <password_prompt_ptrn>^[^\n]*([Pp]assword|[Pp]assphrase.*): *$</password_prompt_ptrn>
  </remote_connection_config>

  <!-- TELNET -->

  <remote_connection_config name="telnet">
    <start_command>telnet</start_command>
    <start_command_common_args>%h</start_command_common_args>
    <start_command_user_args>-l %u</start_command_user_args>
    <user_prompt_ptrn>^[^\n]*(ogin|[Nn]ame)[^\n]*: *$</user_prompt_ptrn>
    <password_prompt_ptrn>^[^\n]*([Pp]assword|[Pp]assphrase.*): *$</password_prompt_ptrn>
  </remote_connection_config>

  <!-- PLINK SSH -->

  <remote_connection_config name="plink ssh">
    <start_command>plink</start_command>
    <start_command_common_args>-C -t -ssh %h</start_command_common_args>
    <start_command_user_args>-l %u</start_command_user_args>
    <user_prompt_ptrn>^[^\n]*(ogin|[Nn]ame)[^\n]*: *$</user_prompt_ptrn>
    <password_prompt_ptrn>^[^\n]*([Pp]assword|[Pp]assphrase.*): *$</password_prompt_ptrn>
    <extra_ptrn auto_answer="true" answer="y">^Store key in cache\? \(y/n\) *</extra_ptrn>
    <use_cr_lf>True</use_cr_lf>
  </remote_connection_config>

  <!-- PLINK RSH -->

  <remote_connection_config name="plink rsh">
    <start_command>plink</start_command>
    <start_command_common_args>-rsh %h</start_command_common_args>
    <start_command_user_args>-l %u</start_command_user_args>
    <user_prompt_ptrn>^[^\n]*(ogin|[Nn]ame)[^\n]*: *$</user_prompt_ptrn>
    <password_prompt_ptrn>^[^\n]*([Pp]assword|[Pp]assphrase.*): *$</password_prompt_ptrn>
    <extra_ptrn auto_answer="true" answer="y">^Store key in cache\? \(y/n\) *</extra_ptrn>
    <use_cr_lf>True</use_cr_lf>
  </remote_connection_config>

  <!-- PLINK TELNET -->

  <remote_connection_config name="plink telnet">
    <start_command>plink</start_command>
    <start_command_common_args>-telnet %h</start_command_common_args>
    <start_command_user_args>-l %u</start_command_user_args>
    <user_prompt_ptrn>^[^\n]*(ogin|[Nn]ame)[^\n]*: *$</user_prompt_ptrn>
    <password_prompt_ptrn>^[^\n]*([Pp]assword|[Pp]assphrase.*): *$</password_prompt_ptrn>
    <extra_ptrn auto_answer="true" answer="y">^Store key in cache\? \(y/n\) *</extra_ptrn>
    <use_cr_lf>True</use_cr_lf>
  </remote_connection_config>

  <!-- RSYNC CONFIGURATION -->

  <rsync_configuration>
    <arguments>-az --progress --exclude *.o</arguments>
  </rsync_configuration>

</GPS>
