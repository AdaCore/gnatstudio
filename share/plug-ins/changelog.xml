<?xml version="1.0"?>

<!--  This file adds support for editing global ChangeLog files -->

<GPS>
  <Language>
    <Name>Changelog</Name>
    <Spec_Suffix>changelog</Spec_Suffix>
    <Keywords>[0-9]+|</Keywords>
    <Keywords>\(.*\).*:</Keywords>
    <Context>
      <Comment_Start>*</Comment_Start>
      <Comment_End>:</Comment_End>
      <String_Delimiter>&quot;</String_Delimiter>
      <Constant_Character>&apos;</Constant_Character>
      <Can_Indent>True</Can_Indent>
      <Syntax_Highlighting>True</Syntax_Highlighting>
      <Case_Sensitive>False</Case_Sensitive>
    </Context>
  </Language>
  <alias name="hdr">
    <param name="USER" environment="true"/>
    <text>%D  %(USER)  &lt;%(USER)@&gt;</text>
  </alias>
</GPS>
