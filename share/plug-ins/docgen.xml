<?xml version="1.0" ?>
<!--  Global configuration file for the documentation-generation tool.

      DocGen is the documentation generation tool built-in in GPS. Its
      output can be configured by a number of HTML template files. The
      name of the templates to use for the various components of the
      documentation is defined in this file.

      You must load this file if you intend to use DocGen.
-->

<GPS>
   <docgen_backend name="HTML" format="text">
      <extension>html</extension>
      <description>HTML documentation</description>
      <file_header_template>html/file_header.thtml</file_header_template>
      <file_footer_template>html/file_footer.thtml</file_footer_template>
      <comment_template>html/comment.thtml</comment_template>
      <keyword_template>html/keyword.thtml</keyword_template>
      <string_template>html/string.thtml</string_template>
      <char_template>html/char.thtml</char_template>
      <subtitle_template>html/subtitle.thtml</subtitle_template>
      <package_desc_template>html/package_desc.thtml</package_desc_template>
      <package_template>html/package.thtml</package_template>
      <with_template>html/with.thtml</with_template>
      <variable_template>html/variable.thtml</variable_template>
      <exception_template>html/exception.thtml</exception_template>
      <type_template>html/type.thtml</type_template>
      <tagged_type_template>html/tagged_type.thtml</tagged_type_template>
      <calls_references_template>html/calls_references.thtml</calls_references_template>
      <caller_references_template>html/caller_references.thtml</caller_references_template>
      <entity_template>html/entity.thtml</entity_template>
      <subprogram_template>html/subprogram.thtml</subprogram_template>
      <header_template>html/header.thtml</header_template>
      <footer_template>html/footer.thtml</footer_template>
      <private_header_template>html/private_header.thtml</private_header_template>
      <main_frame_template>html/main_frame.thtml</main_frame_template>
      <unit_index_header_template>html/unit_index_header.thtml</unit_index_header_template>
      <subprogram_index_header_template>html/subprogram_index_header.thtml</subprogram_index_header_template>
      <type_index_header_template>html/type_index_header.thtml</type_index_header_template>
      <tagged_type_index_header_template>html/tagged_type_index_header.thtml</tagged_type_index_header_template>
      <item_index_template>html/item_index.thtml</item_index_template>
      <private_index_header_template>html/private_index_header.thtml</private_index_header_template>
      <public_index_header_template>html/public_index_header.thtml</public_index_header_template>
      <index_footer_template>html/index_footer.thtml</index_footer_template>
      <tagged_type_index_template>html/tagged_type_index.thtml</tagged_type_index_template>
      <block_template>html/block.thtml</block_template>
      <link_template>html/link.thtml</link_template>
      <description_template>html/description.thtml</description_template>
   </docgen_backend>
</GPS>
