<?xml version="1.0"?>
<!--  You need to install python_support.py as well when installing this file -->

<Python>
  <Language>
    <Name>Python</Name>
    <Spec_Suffix>.py</Spec_Suffix>
    <Keywords>^(a(nd|ssert|s)|break|c(lass|ontinue)|de[fl]|e(l(if|se)|x(cept|ec))|f(inally|or|rom)|global|i(mport|[fns])|lambda|not|or|p(ass|rint)|r(aise|eturn)|try:|while|yield)\b</Keywords>
    <Context>
      <New_Line_Comment_Start>#</New_Line_Comment_Start>
      <String_Delimiter>"</String_Delimiter>
      <Can_Indent>True</Can_Indent>
      <Syntax_Highlighting>True</Syntax_Highlighting>
      <Case_Sensitive>True</Case_Sensitive>
    </Context>
  </Language>

  <filter_and name="Python">
     <filter id="Source editor" />
     <filter language="Python" />
  </filter_and>

  <action name="reload python module" show-command="true" output="" >
     <filter id="Python" />
     <shell lang="python">import python_support</shell>
     <shell lang="python">python_support.reload_file ("""%f""")</shell>
  </action>

  <contextual action="reload python module">
    <Title>Python/Reload module</Title>
  </contextual>

</Python>
