<?xml version="1.0" ?>
<!--  This file adds support for the gnatpp utility.
      This is a pretty printer for Ada files -->

<gnatpp>
   <!--  Missing in this implementation: If no project exists for the current
         file, run "gnat pretty" on that file directly -->

   <action name="Pretty print" output="none" >
      <!-- This action only applies to Ada files -->
      <filter language="ada"
              error="Pretty printing of non Ada files not supported yet" />

      <shell>save_windows</shell>
      <shell>scenario_variables_cmd_line -X</shell>
      <external output="" >gnat pretty -rf %pps %1 %F</external>
      <shell>edit %F 0 0 0 true</shell>
   </action>

   <Submenu>
     <Title>Edit</Title>
     <menu action="Pretty print" before="Unit Testing" >
        <Title>Pretty Print</Title>
     </menu>
   </Submenu>
</gnatpp>

