with "../shared";
with "../common/common";

project Syntax is

   for Source_Dirs use ("src");
   for Object_Dir use "obj";

   package Compiler renames Shared.Compiler;
   package IDE renames Shared.IDE;

   package Builder is
      for Default_Switches ("Ada") use ("-m", "-a");
   end Builder;

   package Linker is
      for Default_Switches ("Ada") use ("-shared-libgcc");
   end Linker;

end Syntax;
