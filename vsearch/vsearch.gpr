with "../gtkada/gtkada";
with "../common/common";
with "../kernel/kernel";
with "../shared";

project Vsearch is

   for Source_Dirs use ("src");
   for Object_Dir use "obj";

   package Compiler renames Shared.Compiler;

   package IDE renames Shared.IDE;

   package Builder is
      for Default_Switches ("Ada") use ("-g", "-m");
   end Builder;

   package Linker is
      for Default_Switches ("Ada") use ("--LINK=../../glide/obj/gpslink");
   end Linker;

end Vsearch;
